{
    "name": "orkhanahmadov/laravel-commentable",
    "description": "Laravel commentable model",
    "keywords": [
        "orkhanahmadov",
        "laravel",
        "comments",
        "eloquent",
        "model",
        "laravel-commentable"
    ],
    "homepage": "https://github.com/orkhanahmadov/laravel-commentable",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Orkhan Ahmadov",
            "email": "ahmadov90@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "illuminate/database": "^6.0|^7.0|^8.0",
        "illuminate/support": "^6.0|^7.0|^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0|^5.0|^6.0",
        "phpunit/phpunit": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Orkhanahmadov\\LaravelCommentable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Orkhanahmadov\\LaravelCommentable\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Orkhanahmadov\\LaravelCommentable\\LaravelCommentableServiceProvider"
            ]
        }
    }
}
